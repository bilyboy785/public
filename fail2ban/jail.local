[sshd]
enabled = true
port = ssh
filter = sshd
logpath = /var/log/auth.log
action = ufw[application="OpenSSH",blocktype=reject]
maxretry = 3
findtime = 300
bantime = 3600
ignoreip = 127.0.0.1

